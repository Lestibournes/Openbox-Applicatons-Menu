<item label="Lock Screen">
    <action name="Execute">
        <execute>
            dm-tool lock
        </execute>
    </action>
</item>

<item label="Log Out">
	<action name="Exit" />
</item>

<item label="Reboot">
    <action name="Execute">
        <prompt>
            Are you sure you want to reboot?
        </prompt>
        <execute>
            shutdown -r now
        </execute>
    </action>
</item>

<item label="Shut Down">
    <action name="Execute">
        <prompt>
            Are you sure you want to shut down?
        </prompt>
        <execute>
            shutdown -h now
        </execute>
    </action>
</item>
